<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weibo.toil.ui.fragment.OtherFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <com.weibo.toil.ui.view.StereoView
            android:id="@+id/stereoView"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.weibo.toil.ui.view.CustomEdittext
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="1" />

            <com.weibo.toil.ui.view.CustomEdittext
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search_bianma"
                android:text="shentong"
                android:hint="一个3D的EditText;查快递填快递代码，快递单号翻转EditText" />

            <com.weibo.toil.ui.view.CustomEdittext
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="快递单号"
                android:text="65465465465"
                android:id="@+id/search_danhao"
                />

        </com.weibo.toil.ui.view.StereoView>

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="search" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="result" />

    </LinearLayout>

</ScrollView>
